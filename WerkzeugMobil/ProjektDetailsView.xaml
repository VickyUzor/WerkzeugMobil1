<Window x:Class="WerkzeugMobil.ProjektDetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodel="clr-namespace:WerkzeugMobil.MVVM.Viewmodel"
        xmlns:local="clr-namespace:WerkzeugMobil.Converters"
        Title="Projekt Details" Height="500" Width="600"
        Background="#00254D"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewmodel:ProjekteViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <local:ProjektWerkzeugCountConverter x:Key="ProjektWerkzeugCountConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Projekt Details"
                   Foreground="White"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>

        <!-- Project List -->
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding Projekte}"
                  SelectedItem="{Binding SelectedProjekt}" 
                 Background="Transparent"
                 BorderThickness="0"
                 Margin="0,20,0,20"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="White"
                            CornerRadius="10"
                            BorderBrush="#A7BEE9"
                            BorderThickness="1"
                            Padding="15"
                            Margin="0,0,0,10">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="Gray" Opacity="0.4"/>
                        </Border.Effect>
                        <StackPanel>
                            <!-- ProjektAdresse -->
                            <TextBlock Text="{Binding ProjektAddresse}"
               FontSize="16"
               FontWeight="Bold"
               Foreground="#1D2E5B"/>

                            <!-- Werkzeug count shown via MultiBinding -->
                            <TextBlock FontSize="14"
               Foreground="Gray"
               Margin="0,5,0,0">
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource ProjektWerkzeugCountConverter}">
                                        <!-- First binding: current ProjektDTO (this) -->
                                        <Binding />

                                        <!-- Second binding: ProjekteViewModel -->
                                        <Binding Path="DataContext"
                         RelativeSource="{RelativeSource AncestorType=Window}" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>

                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,10">
            <Button Content="Fertigstellen"
                    Width="150"
                    Height="40"
                    Background="#FFFFFF"
                    Foreground="Black"
                    FontWeight="Bold"
                    Margin="0,0,10,0"
                    Command="{Binding FinishProjektCommand}"/>

            <Button Width="50"
                    Height="40"
                    Background="#1A3C5F"
                    BorderBrush="#33475B"
                    BorderThickness="1"
                    Cursor="Hand"
                    Click="BackButton_Click">
                <TextBlock FontFamily="Segoe MDL2 Assets"
                           Text="&#xE72B;"
                           FontSize="20"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>