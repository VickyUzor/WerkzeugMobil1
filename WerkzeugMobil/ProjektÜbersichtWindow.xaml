<Window x:Class="WerkzeugMobil.ProjektWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Projekte" Height="400" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Grid>
		<TextBlock Text="Projekt Management" FontSize="20" FontWeight="Bold" Margin="10" HorizontalAlignment="Center" />
		<ListView x:Name="ProjektListView" Margin="10,50,10,60" Background="#f0f0f0">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Projekt ID" DisplayMemberBinding="{Binding ProjektId}" Width="100" />
					<GridViewColumn Header="Projekt Name" DisplayMemberBinding="{Binding ProjektName}" Width="200" />
					<GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="150" />
				</GridView>
			</ListView.View>
		</ListView>
		<Button Content="SchlieÃŸen" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80" Height="30" Margin="10"
                Click="CloseButton_Click" />
	</Grid>
</Window>
