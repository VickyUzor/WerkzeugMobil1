<Window x:Class="WerkzeugMobil.AddProjekt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:viewmodel="clr-namespace:WerkzeugMobil.MVVM.Viewmodel"
        Title="Add New Projekt" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#00254D">

	<Window.DataContext>
		<viewmodel:AddProjektViewModel />
	</Window.DataContext>

	<Grid>
		<StackPanel Orientation="Horizontal" Background="#004D80" Height="50" VerticalAlignment="Top">
			<Button Content="Werkzeug" Width="150" Height="40" Foreground="White" Background="Transparent"
                    Command="{Binding NavigateWerkzeugCommand}"/>
			<Button Content="Projekt" Width="150" Height="40" Foreground="White" Background="Transparent"/>
		</StackPanel>

		<Grid Margin="20">
			<Border Background="White" CornerRadius="10" Padding="30">
				<StackPanel>
					<TextBlock Text="Projekt Adresse" FontSize="16" FontWeight="Bold" />
					<TextBox Text="{Binding Projekt.ProjektAddresse, UpdateSourceTrigger=PropertyChanged}" />
					<Button Content="Submit" Command="{Binding SubmitCommand}" />
				</StackPanel>
			</Border>
		</Grid>
	</Grid>
</Window>