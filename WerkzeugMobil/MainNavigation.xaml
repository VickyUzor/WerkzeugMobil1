<Window x:Class="WerkzeugMobil.MainNavigation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodel="clr-namespace:WerkzeugMobil.MVVM.Viewmodel"
        xmlns:local="clr-namespace:WerkzeugMobil.Converters"
        xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        Title="Device Interface" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}" FontFamily="{DynamicResource AppFont}">

    <Window.Resources>
        <local:BoolToThemeIconConverter x:Key="BoolToThemeIconConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="{DynamicResource SidebarBrush}" Grid.Column="0" Padding="20" VerticalAlignment="Stretch">
            <Grid VerticalAlignment="Stretch">
                <StackPanel VerticalAlignment="Stretch">
                    <!-- Logo Image -->
                    <!-- Theme Toggle Button -->
                    <!-- Logo Image -->
                    <Grid Margin="0 0 0 20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <!-- spacing -->
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Image Logo -->
                        <Image Source="pack://application:,,,/LogoRech.png" Height="49" Grid.Column="0" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="-34,2,44,0"/>

                        <!-- Theme Toggle Button -->
                        <Button Grid.Column="1"
            Background="{DynamicResource InputBrush}"
            BorderBrush="{DynamicResource AccentBrush}" BorderThickness="1"
            Cursor="Hand" Command="{Binding ToggleThemeCommand}" ToolTip="Toggle Theme" Grid.ColumnSpan="2" Margin="152,4,40,0" RenderTransformOrigin="0.5,0.5">
                            <Button.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="-1"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Button.RenderTransform>
                            <fa:ImageAwesome Icon="{Binding IsDarkMode, Converter={StaticResource BoolToThemeIconConverter}}"
                         Width="20" Height="20"
                         Foreground="{DynamicResource TextBrush}" />
                        </Button>
                    </Grid>

                    <!-- Search Field -->
                    <DockPanel Margin="0 0 0 20">
                        <Border Background="{DynamicResource InputBrush}" CornerRadius="5" Height="30" Width="140">
                            <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                     BorderThickness="0" Background="Transparent"
                                     Foreground="{DynamicResource TextBrush}" FontSize="14"
                                     VerticalContentAlignment="Center" Padding="5"/>
                        </Border>
                        <Button DockPanel.Dock="Right" Command="{Binding SearchCommand}"
                                Background="{DynamicResource InputBrush}" BorderBrush="{DynamicResource AccentBrush}" BorderThickness="1"
                                Width="30" Height="30" Margin="5" Cursor="Hand">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE721;" FontSize="16" Foreground="{DynamicResource TextBrush}"/>
                        </Button>
                    </DockPanel>

                    <!-- Werkzeug List -->
                    <ListBox ItemsSource="{Binding FilteredWerkzeuge}"
                             SelectedItem="{Binding SelectedWerkzeug, Mode=TwoWay}"
                             Background="{DynamicResource SidebarBrush}" BorderThickness="0" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 20">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10" Background="{DynamicResource InputBrush}">
                                    <TextBlock Text="{Binding WerkzeugId}" FontWeight="SemiBold"/>
                                    <TextBlock Text=" - "/>
                                    <TextBlock Text="{Binding Art}"/>
                                    <TextBlock Text=" ("/>
                                    <TextBlock Text="{Binding Marke}"/>
                                    <TextBlock Text=")"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <!-- Bottom Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
                    <Button Width="50" Height="50" Background="{DynamicResource InputBrush}" BorderBrush="{DynamicResource AccentBrush}" BorderThickness="1"
                            Cursor="Hand" Click="Projekt_Click" Margin="5">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE77B;" FontSize="20" Foreground="{DynamicResource TextBrush}"/>
                    </Button>

                    <Button Width="50" Height="50" Background="{DynamicResource InputBrush}" BorderBrush="{DynamicResource AccentBrush}" BorderThickness="1"
                            Cursor="Hand" Click="Maschine_Lager" Margin="5">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8A5;" FontSize="20" Foreground="{DynamicResource TextBrush}"/>
                    </Button>

                    <Button Width="50" Height="50" Background="{DynamicResource InputBrush}" BorderBrush="{DynamicResource AccentBrush}" BorderThickness="1"
                            Cursor="Hand" Click="PlusButton_Click" Margin="5" Command="{Binding AddProjektViewModel}">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xECC8;" FontSize="22" Foreground="{DynamicResource TextBrush}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Sidebar Separator -->
        <Border Grid.Column="1" Background="{DynamicResource AccentBrush}" Width="1" />

        <!-- Main Content -->
        <Grid Grid.Column="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>

            <Border Background="{DynamicResource InputBrush}" CornerRadius="12" Padding="30" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Info Section -->
                    <StackPanel Margin="10" Grid.Column="0">
                        <TextBlock Text="Geräte Kennzahl" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 10"/>
                        <TextBox Text="{Binding currentWerkzeug.WerkzeugId}" IsReadOnly="True" Height="30"
                                 Background="{DynamicResource AccentBrush}" BorderThickness="0" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 15"/>

                        <TextBlock Text="Marke" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 10"/>
                        <TextBox Text="{Binding currentWerkzeug.Marke}" IsReadOnly="True" Height="30"
                                 Background="{DynamicResource  AccentBrush}" BorderThickness="0" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 15"/>

                        <TextBlock Text="Art" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 10"/>
                        <TextBox Text="{Binding currentWerkzeug.Art}" IsReadOnly="True" Height="30"
                                 Background="{DynamicResource  AccentBrush}" BorderThickness="0" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 15"/>

                        <TextBlock Text="Projekt Adresse" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 10"/>
                        <TextBox Text="{Binding currentWerkzeug.ProjektAdresse}" IsReadOnly="True" Height="30"
                                 Background="{DynamicResource  AccentBrush}" BorderThickness="0" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 15"/>

                        <TextBlock Text="Beschreibung (optional)" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 10"/>
                        <TextBox Text="{Binding currentWerkzeug.Beschreibung}" IsReadOnly="True" Height="120" TextWrapping="Wrap"
                                 Background="{DynamicResource  AccentBrush}" BorderThickness="0" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 15"/>
                    </StackPanel>

                    <!-- History Section -->
                    <Border Background="{DynamicResource  AccentBrush}" CornerRadius="10" Grid.Column="1" Padding="15" Margin="0,6,0,-6">
                        <StackPanel>
                            <TextBlock Text="History" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 10"/>
                            <ListView ItemsSource="{Binding SelectedWerkzeug.History}" Background="Transparent" BorderThickness="0"
                                      Foreground="{DynamicResource TextBrush}" Height="200" Margin="0 0 0 20">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel LastChildFill="True">
                                            <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0 0 0 5"/>
                                            <Separator BorderBrush="{DynamicResource TextBrush}" BorderThickness="0,0,0,1" />
                                        </DockPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>