<Window x:Class="WerkzeugMobil.MainNavigation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PRAN Bau Management" Height="600" Width="900">
    <Grid Background="#00264d">
        <DockPanel>
            <!-- Sidebar -->
            <StackPanel Width="200" Background="LightGray" DockPanel.Dock="Left">
                <TextBox Margin="10" x:Name="SearchBar" />
                <Button Content="Werkzeuge" x:Name="WerkzeugButton" Background="Gray" Click="WerkzeugButton_Click" />
                <Button Content="Projekte" x:Name="ProjektButton" Click="ProjektButton_Click" />
                <Button Content="+" x:Name="AddButton" VerticalAlignment="Bottom" Click="AddButton_Click" />
            </StackPanel>

            <!-- Content -->
            <ContentControl x:Name="MainContent" />
        </DockPanel>
    </Grid>
</Window>
