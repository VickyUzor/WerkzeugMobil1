<Window x:Class="WerkzeugMobil.MainNavigation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodel="clr-namespace:WerkzeugMobil.MVVM.Viewmodel"
        xmlns:local="clr-namespace:WerkzeugMobil.Converters"
        xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
      
        Title="Device Interface" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}" FontFamily="{DynamicResource AppFont}">

    <Window.Resources>
        <local:BoolToThemeIconConverter x:Key="BoolToThemeIconConverter"/>
        <Style x:Key="ModernFlatButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="ButtonBackground" Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBackground" Property="Background" Value="#FF007ACC" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBackground" Property="Background" Value="#FF005A9E" />
                                <Setter Property="Foreground" Value="#FFE0E0E0" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonBackground" Property="Background" Value="#FFCCCCCC" />
                                <Setter Property="Foreground" Value="#FF888888" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource InputBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Rectangle x:Name="BackgroundRect" Fill="{TemplateBinding Background}" Stroke="{TemplateBinding BorderBrush}" StrokeThickness="{TemplateBinding BorderThickness}" />
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BackgroundRect" Property="Fill">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FF3A7BD5" Offset="0"/>
                                            <GradientStop Color="#FF00D2FF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#7700D2FF" BlurRadius="8" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BackgroundRect" Property="Fill" Value="#FF007ACC"/>
                                <Setter Property="Foreground" Value="#FFE0E0E0"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#55007ACC" BlurRadius="10" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="BackgroundRect" Property="Fill" Value="#FF555555"/>
                                <Setter Property="Foreground" Value="#FFAAAAAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="{DynamicResource SidebarBrush}" Grid.Column="0" Padding="20" VerticalAlignment="Stretch">
            <Grid VerticalAlignment="Stretch">
                <StackPanel VerticalAlignment="Stretch">
                    <!-- Logo Image -->
                    <!-- Theme Toggle Button -->
                    <!-- Logo Image -->
                    <Grid Margin="0 0 0 20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <!-- spacing -->
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Image Logo -->
                        <Image Source="pack://application:,,,/LogoRech.png" Height="49" Grid.Column="0" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="-34,2,44,0"/>

                        <!-- Theme Toggle Button -->
                        <Button Grid.Column="1"
            Background="{DynamicResource InputBrush}"
            BorderBrush="{DynamicResource AccentBrush}" BorderThickness="1"
            Cursor="Hand" Command="{Binding ToggleThemeCommand}" ToolTip="Toggle Theme" Grid.ColumnSpan="2" Margin="152,4,40,0" RenderTransformOrigin="0.5,0.5">
                            <Button.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="-1"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Button.RenderTransform>
                            <fa:ImageAwesome Icon="{Binding IsDarkMode, Converter={StaticResource BoolToThemeIconConverter}}"
                         Width="20" Height="20"
                         Foreground="{DynamicResource TextBrush}" />
                        </Button>
                    </Grid>

                    <!-- Search Field -->
                    <DockPanel Margin="0 0 0 20">
                        <Border Background="{DynamicResource InputBrush}" CornerRadius="5" Height="37" Width="140">
                            <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                     BorderThickness="0" Background="Transparent"
                                     Foreground="{DynamicResource TextBrush}" FontSize="14"
                                     VerticalContentAlignment="Center" Padding="5" Margin="4,4,4,0"/>
                        </Border>
                        <Button DockPanel.Dock="Right" Command="{Binding SearchCommand}"
                                Background="{DynamicResource InputBrush}" BorderBrush="{DynamicResource AccentBrush}" BorderThickness="1"
                                Width="30" Height="30" Margin="5" Cursor="Hand">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE721;" FontSize="16" Foreground="{DynamicResource TextBrush}"/>
                        </Button>
                    </DockPanel>

                    <ListBox ItemsSource="{Binding FilteredWerkzeuge}"
         SelectedItem="{Binding SelectedWerkzeug, Mode=TwoWay}"
         Background="{DynamicResource SidebarBrush}" BorderThickness="0" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 20"
         ScrollViewer.VerticalScrollBarVisibility="Auto"
         Padding="2">

                        <ListBox.Resources>
                            <!-- Remove default selection highlight -->
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
                        </ListBox.Resources>

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="0 0 0 6"/>
                                <Setter Property="Padding" Value="8 4"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentBrush}" />
                                                    <Setter Property="Foreground" Value="{DynamicResource BackgroundBrush}" />
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentBrush}" />
                                                    <Setter Property="Foreground" Value="{DynamicResource BackgroundBrush}" />
                                                    <Setter Property="FontWeight" Value="Normal" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel LastChildFill="False" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding WerkzeugId}" FontWeight="SemiBold" FontSize="13" Margin="0 0 4 0" Width="60" />
                                    <TextBlock Text=" - " FontSize="13" Foreground="{DynamicResource TextBrush}" Margin="0 0 4 0"/>
                                    <TextBlock Text="{Binding Art}" FontSize="13" Margin="0 0 4 0" Width="80" TextTrimming="CharacterEllipsis"/>

                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10">
                    <Button Content="← Zurück"
        Style="{StaticResource ModernFlatButtonStyle}"
        Width="100" Height="36" 
        HorizontalAlignment="center"
        Margin="10,10,0,0"
        Click="BackToProjekte_Click"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
    <!-- Check icon button -->
    <Button Width="50" Height="50" Style="{StaticResource ModernFlatButtonStyle}" Click="Projekt_Click" Margin="5">
        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE73E;" FontSize="20" />
    </Button>

    <!-- Machine/Lager button -->
    <Button Width="50" Height="50" Style="{StaticResource ModernFlatButtonStyle}" Click="Maschine_Lager" Margin="5">
        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8A5;" FontSize="20" />
    </Button>

    <!-- Add project button -->
    <Button Width="50" Height="50" Style="{StaticResource ModernFlatButtonStyle}" Click="PlusButton_Click" Margin="5" Command="{Binding AddProjektViewModel}">
        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xECC8;" FontSize="22" />
    </Button>
</StackPanel>

<!-- Logout button -->
<Button Width="180" Height="36" Style="{StaticResource ModernFlatButtonStyle}" Click="Logout_Click" Margin="0,20,0,0" HorizontalAlignment="Center">
    Logout
</Button>


                </StackPanel>
            </Grid>
        </Border>

        <!-- Sidebar Separator -->
        <Border Grid.Column="1" Background="{DynamicResource AccentBrush}" Width="1" />

        <!-- Main Content -->
        <Grid Grid.Column="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>

            <Border Background="{DynamicResource InputBrush}" CornerRadius="12" Padding="30" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Info Section -->
                    <StackPanel Margin="10" Grid.Column="0">
                        <TextBlock Text="Geräte Kennzahl" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 10"/>
                        <TextBox Text="{Binding currentWerkzeug.WerkzeugId}" IsReadOnly="True" Height="30"
                                 Background="{DynamicResource AccentBrush}" BorderThickness="0" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 15"/>

                        <TextBlock Text="Marke" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 10"/>
                        <TextBox Text="{Binding currentWerkzeug.Marke}" IsReadOnly="True" Height="30"
                                 Background="{DynamicResource  AccentBrush}" BorderThickness="0" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 15"/>

                        <TextBlock Text="Art" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 10"/>
                        <TextBox Text="{Binding currentWerkzeug.Art}" IsReadOnly="True" Height="30"
                                 Background="{DynamicResource  AccentBrush}" BorderThickness="0" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 15"/>

                        <TextBlock Text="Projekt Adresse" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 10"/>
                        <TextBox Text="{Binding currentWerkzeug.ProjektAdresse}" IsReadOnly="True" Height="30"
                                 Background="{DynamicResource  AccentBrush}" BorderThickness="0" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 15"/>

                        <TextBlock Text="Beschreibung (optional)" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 10"/>
                        <TextBox Text="{Binding currentWerkzeug.Beschreibung}" IsReadOnly="True" Height="120" TextWrapping="Wrap"
                                 Background="{DynamicResource  AccentBrush}" BorderThickness="0" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 15"/>
                    </StackPanel>
    
                    <!-- History Section -->
                    <Border Background="{DynamicResource  AccentBrush}" CornerRadius="10" Grid.Column="1" Padding="15" Margin="0,6,0,-6">
                        <StackPanel>
                            <TextBlock Text="History" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource TextBrush}" Margin="0 0 0 10"/>
                            <ListView ItemsSource="{Binding SelectedWerkzeug.History}" Background="Transparent" BorderThickness="0"
                                      Foreground="{DynamicResource TextBrush}" Height="200" Margin="0 0 0 20">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel LastChildFill="True">
                                            <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0 0 0 5"/>
                                            <Separator BorderBrush="{DynamicResource TextBrush}" BorderThickness="0,0,0,1" />
                                        </DockPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>