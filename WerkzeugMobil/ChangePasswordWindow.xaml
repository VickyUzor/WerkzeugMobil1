<Window x:Class="WerkzeugMobil.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Passwort ändern" Height="280" Width="431"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Neues Passwort:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <PasswordBox x:Name="NewPasswordBox" Grid.Row="0" Grid.Column="1" Margin="10,5" MinWidth="200"/>

        <Label Content="Passwort bestätigen:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,15,0,5"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="1" Grid.Column="1" Margin="10,15,10,5" MinWidth="200"/>

        <Button Content="Ändern"
                Grid.Row="3" Grid.ColumnSpan="2"
                Height="35"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Width="120"
                Click="ChangePassword_Click"/>
    </Grid>
</Window>