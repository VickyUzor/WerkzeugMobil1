<Window x:Class="WerkzeugMobil.LoginUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="White"
        Loaded="Window_Loaded"
        WindowStyle="None">

    <Grid>
        <!-- Main Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <!-- Left Panel -->
                <ColumnDefinition Width="1*"/>
                <!-- Right Panel -->
            </Grid.ColumnDefinitions>

            <!-- Left-Side Background Image -->
            <Grid Grid.Column="0">
                <Image Source="BackgroundImagePran.jpg" Stretch="UniformToFill" Margin="0,0,-114,0" />
            </Grid>

            <!-- Right-Side Login Form -->
            <Border Background="White" Grid.Column="1">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">

                    <!-- Logo -->
                    <Image Source="pack://application:,,,/logo.jpg" 
                           Width="150" Height="50" Margin="0,0,0,30"
                           HorizontalAlignment="Center"/>

                    <!-- Login Title -->
                    <TextBlock Text="LOGIN" FontSize="20" FontWeight="Bold" 
                               Foreground="Black" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <TextBlock Text="Benutzer" Foreground="Gray" Margin="0,5,0,0" />
                    <TextBox x:Name="BenutzernameInput" Height="33" Padding="5"  Margin="0,0,0,10" 
         VerticalContentAlignment="Center" AutomationProperties.IsRequiredForForm="True">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="#ECECEC"  BorderThickness="1" CornerRadius="5">
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>

                    <!-- Passwort Field -->
                    <TextBlock Text="Password" Foreground="Gray"  Margin="0,5,0,0"/>
                    <PasswordBox x:Name="PasswortInput" Height="33" Padding="5" Margin="0,0,0,10"
             VerticalContentAlignment="Center">
                        <PasswordBox.Template>
                            <ControlTemplate TargetType="PasswordBox">
                                <Border Background="#ECECEC"  BorderThickness="1" CornerRadius="5">
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </PasswordBox.Template>
                    </PasswordBox>
                    <!-- Remember Me and Forgot Password -->
                    <Grid Margin="0,10,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Remember Me Checkbox -->
                        <CheckBox x:Name="RememberMeCheckbox" Content="Remember me" Foreground="Gray" Grid.Column="0"/>

                        <!-- Forgot Password Link -->
                        <TextBlock  MouseLeftButtonUp="ForgotPasswordClick" Text="Forgot password?" Foreground="#007ACC" 
                                   Grid.Column="1" HorizontalAlignment="Right"
                                   Cursor="Hand" TextDecorations="Underline"/>
                    </Grid>

                    <!-- Login Button -->
                    <Button Content="Sign in" Background="#007ACC" Foreground="White"
        FontWeight="Bold" Width="274" Height="25" 
        HorizontalAlignment="Center" Click="LoginButtonClick">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                     CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Close Button (Always on Top) -->
        <Button Content="X" Width="30" Height="30"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="10" Click="CloseWindow"
                Background="Transparent" BorderThickness="0"
                FontSize="16" FontWeight="Bold"
                Foreground="Black" Cursor="Hand"
                Panel.ZIndex="99"/>
        <!-- Ensures it is above all elements -->
    </Grid>
</Window>