<Window x:Class="WerkzeugMobil.Lager"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:viewmodel="clr-namespace:WerkzeugMobil.MVVM.Viewmodel"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Title="InventoryView" Height="750" Width="1200"
        Background="#00254D">
    
    <Window.DataContext>
        <viewmodel:LagerViewModel/>
    </Window.DataContext>
    
    <Grid>
        <!-- Header -->
        <Border  Height="80" VerticalAlignment="Top">
            <Grid>
                <Image Source="pack://application:,,,/LogoRech.png" 
                           Width="150" Height="50" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left" 
                           Margin="20,0,0,0" UseLayoutRounding="True" />

                <!-- Filter Buttons -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            Margin="0,0,20,0">
                    <Button Content="In Lager" 
                            Width="120" 
                            Height="40" 
                            Background="#004D80" 
                            Foreground="White" 
                            BorderThickness="0" 
                            Command="{Binding FilterInLagerCommand}" 
                            Margin="0,0,10,0" />
                    <Button Content="Mit Adresse" 
                            Width="120" 
                            Height="40" 
                            Background="#FFFFFF" 
                            Foreground="Black" 
                            BorderThickness="0" 
                            Command="{Binding FilterMitAdresseCommand}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Margin="20,100,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="209*"/>
                <ColumnDefinition Width="23*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Search Bar -->
                <RowDefinition Height="*" />
                <!-- Data Grid -->
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="0" Grid.ColumnSpan="2">
                <TextBox Width="400" Height="40" 
                         
                         Margin="0,0,10,0" 
                         Background="White" 
                         BorderBrush="#CCCCCC" 
                         BorderThickness="1"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Search" 
                        Width="100" 
                        Height="40" 
                        Background="#004D80" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Command="{Binding SearchCommand}" />
                <Button Content="Reset" 
                        Width="100" 
                        Height="40" 
                        Background="#CCCCCC" 
                        Foreground="Black" 
                        Margin="10,0,0,0" 
                        Command="{Binding ResetCommand}" />
            </StackPanel>

            <!-- Data Grid -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Werkzeuge}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Background="White"
                      BorderBrush="#CCCCCC"
                      BorderThickness="1"
                      RowBackground="#F3F3F3"
                      AlternatingRowBackground="#E8E8E8" Grid.ColumnSpan="2">
                <!-- Column Definitions -->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Geräte Kennzahl" Binding="{Binding WerkzeugId}" Width="*" />
                    <DataGridTextColumn Header="Marke" Binding="{Binding Marke}" Width="*" />
                    <DataGridTextColumn Header="Art" Binding="{Binding Art}" Width="*" />
                    <DataGridTextColumn Header="Projekt Adresse" Binding="{Binding ProjektAdresse}" Width="*" />
                    <DataGridTextColumn Header="Beschreibung" Binding="{Binding Beschreibung}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>