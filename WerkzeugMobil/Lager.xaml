<Window x:Class="WerkzeugMobil.Lager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodel="clr-namespace:WerkzeugMobil.MVVM.Viewmodel"
        Title="Inventory View"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="750" Width="1200"
        Background="#E6EEF7">

    <Window.DataContext>
        <viewmodel:LagerViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Background" Value="#C4D7F2"/>
            <Setter Property="Foreground" Value="#1D2E5B"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#888" BlurRadius="5" ShadowDepth="0" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A7BEE9"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#555" BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="#1D2E5B"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                    <Setter Property="Effect" Value="{x:Null}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#A7BEE9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Foreground" Value="#1D2E5B"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#BBB" BlurRadius="4" ShadowDepth="0" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#D6E1F0"/>
            <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#AAA" BlurRadius="6" ShadowDepth="0" Opacity="0.1"/>
                </Setter.Value>
            </Setter>

            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#1D2E5B"/>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#F3F7FD"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#A7BEE9"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#B7C9F6"/>
                        <Setter Property="Foreground" Value="#1D2E5B"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#A7BEE9"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="#999" BlurRadius="3" ShadowDepth="0" Opacity="0.05"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="#E6EEF7" Grid.Column="0" Padding="20">
            <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Image Source="pack://application:,,,/LogoRech.png"
               Width="150" Height="50"
               Margin="0,0,0,40"
               HorizontalAlignment="Center"/>

                <Button Content="Dashboard" Style="{StaticResource ModernButtonStyle}" Click="NavigateDashboard" Margin="0,0,0,10"/>
                <Button Content="Project" Style="{StaticResource ModernButtonStyle}" Click="NavigateProjekte" Margin="0,0,0,10"/>
                <Button Content="Werkzeug" Style="{StaticResource ModernButtonStyle}" Click="NavigateAddWerkzeug" Margin="0,0,0,10"/>

                <!-- Lager: current page -->
                <Button Content="Lager"
                Style="{StaticResource ModernButtonStyle}"
                IsEnabled="False"
                Margin="0,0,0,10"/>

                <!-- Spacer to push "Back" and "Logout" to the bottom -->
                <StackPanel VerticalAlignment="Stretch">
                    <StackPanel VerticalAlignment="Bottom" Margin="0,40,0,0">
                        <!-- Back Button -->
                        <Button Content="← Zurück"
                        Style="{StaticResource ModernButtonStyle}"
                        Click="BackButton_Click"
                        Margin="0,0,0,10"/>

                        <!-- Logout Button -->
                        <Button Content="Logout"
                        Style="{StaticResource ModernButtonStyle}" Click="Logout_Click"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Search -->
                <RowDefinition Height="Auto"/>
                <!-- Filter -->
                <RowDefinition Height="*"/>
                <!-- DataGrid: takes remaining space -->
            </Grid.RowDefinitions>
            

            <!-- Back Button -->
           
            <!-- Search -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="0" Margin="0,0,0,10" VerticalAlignment="Center">
                <TextBox Width="400" Height="40"
                         Style="{StaticResource ModernTextBoxStyle}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" RenderTransformOrigin="0.494,3.933"/>

                <Button Content="Search"
                        Width="100" Height="40"
                        Style="{StaticResource ModernButtonStyle}"
                        Command="{Binding SearchCommand}"/>
                <Button Content="Reset"
                        Width="100" Height="40"
                        Style="{StaticResource ModernButtonStyle}"
                        Command="{Binding ResetCommand}"/>
            </StackPanel>

            <!-- Filter -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="1" Margin="0,0,0,10" RenderTransformOrigin="3.346,-0.291">
                <Button Content="Export to PDF"
                Width="120" Height="40"
                Style="{StaticResource ModernButtonStyle}"
                Click="ExportPdfButton_Click" />
                <Button Content="In Lager"
                        Width="120" Height="40"
                        Style="{StaticResource ModernButtonStyle}"
                        Command="{Binding FilterInLagerCommand}" Margin="0,0,10,0"/>
                <Button Content="Mit Adresse"
                        Width="120" Height="40"
                        Style="{StaticResource ModernButtonStyle}"
                        Command="{Binding FilterMitAdresseCommand}"/>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid ItemsSource="{Binding Werkzeuge}"
                      SelectedItem="{Binding SelectedWerkzeug}"
                      AutoGenerateColumns="False"
                      Grid.Row="2"
                      Style="{StaticResource ModernDataGridStyle}"
                      AlternationCount="2"
                      Margin="0,10,0,0"
                      CanUserResizeRows="False"
                      CanUserResizeColumns="True"
                      SelectionChanged="WerkzeugDataGrid_SelectionChanged" 
                      CanUserSortColumns="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Werkzeug ID" Binding="{Binding WerkzeugId}" Width="*"/>
                    <DataGridTextColumn Header="Art" Binding="{Binding Art}" Width="*"/>
                    <DataGridTextColumn Header="Marke" Binding="{Binding Marke}" Width="*"/>
                    <DataGridTextColumn Header="Projekt Adresse" Binding="{Binding ProjektAdresse}" Width="2*"/>
                    <DataGridTextColumn Header="Beschreibung" Binding="{Binding Beschreibung}" Width="2*"/>
                    
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>