<Window x:Class="WerkzeugMobil.AddWerkzeug"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WerkzeugMobil" 
        xmlns:viewmodel="clr-namespace:WerkzeugMobil.MVVM.Viewmodel"
        mc:Ignorable="d"
        Title="Add New Werkzeug" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#00254D">

    <Window.DataContext>
        <viewmodel:AddWerkzeugViewModel />
    </Window.DataContext>

    <Grid>
        <!-- Main Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Background="#004D80" Height="60">
            <Image Source="pack://application:,,,/LogoRech.png" 
                   Width="150" Height="50" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   Margin="20,0,0,0" UseLayoutRounding="True" />
        </Grid>

        <!-- Navigation Bar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="#E0E0E0" Height="50">
            <Button Content="Werkzeug" Width="120" Height="40" Margin="10" Command="{Binding NavigateWerkzeugCommand}" />
            <Button Content="Projekt" Width="120" Height="40" Margin="10" Command="{Binding NavigateProjektCommand}" />
        </StackPanel>

        <!-- Main Content Section -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Form Section -->
            <Border Background="White" CornerRadius="10" Padding="30" Grid.Column="0">
                <StackPanel>
                    <!-- Geräte Kennzahl -->
                    <TextBlock Text="Geräte Kennzahl" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />
                    <TextBox Height="40" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1"
                             Text="{Binding Werkzeug.WerkzeugId, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- Marke -->
                    <TextBlock Text="Marke" FontSize="16" FontWeight="Bold" Margin="20,20,0,10" />
                    <TextBox Height="40" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1"
                             Text="{Binding Werkzeug.Marke, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- Art -->
                    <TextBlock Text="Art" FontSize="16" FontWeight="Bold" Margin="20,20,0,10" />
                    <TextBox Height="40" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1"
                             Text="{Binding Werkzeug.Art, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- Projekt Adresse -->
                    <TextBlock Text="Projekt Adresse" FontSize="16" FontWeight="Bold" Margin="20,20,0,10" />
                    <TextBox Height="40" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1"
                             Text="{Binding Werkzeug.ProjektAdresse, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- Beschreibung -->
                    <TextBlock Text="Beschreibung" FontSize="16" FontWeight="Bold" Margin="20,20,0,10" />
                    <TextBox Height="80" TextWrapping="Wrap" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1"
                             Text="{Binding Werkzeug.Beschreibung, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- Submit Button -->
                    <Button Content="Submit" Width="150" Height="40" Background="#004D80" Foreground="White" FontSize="16"
                            HorizontalAlignment="Right" Margin="20,40,0,0" BorderThickness="0"
                            Command="{Binding SubmitCommand}" Cursor="Hand" />
                    <Button Content="Reset" Command="{Binding AddNewCommand}" Width="150" Height="40" FontSize="16" Margin="20,-40,0,0" HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <!-- Preview/Instructions Section -->
            <Border Background="#E8F0F8" CornerRadius="10" Padding="30" Grid.Column="1" Margin="20,0,0,0">
                <StackPanel>
                    <TextBlock Text="Werkzeuge" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" />
                    <TextBlock Text="Existierende Maschinen "
                               TextWrapping="Wrap" FontSize="14" Foreground="#555555" />
                    <Border Height="300" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,20,0,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="(Existing Maschines)"
                                       FontSize="14" Foreground="#888888" Padding="10" />
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
