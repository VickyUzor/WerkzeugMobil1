<Window x:Class="WerkzeugMobil.AddWerkzeug"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WerkzeugMobil" 
        xmlns:conv="clr-namespace:WerkzeugMobil.Converters"
        xmlns:viewmodel="clr-namespace:WerkzeugMobil.MVVM.Viewmodel"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Add New Werkzeug" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#00254D">

    <Window.Resources>
        <conv:ToolTypeCountToStringConverter x:Key="ToolTypeCountToStringConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <viewmodel:AddWerkzeugViewModel/>
    </Window.DataContext>

    <Grid>
        <!-- Header Section -->
        <Grid Background="#004D80" Height="80" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <Image Source="pack://application:,,,/LogoRech.png" 
                   Width="150" Height="50" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   Margin="20,0,0,0" UseLayoutRounding="True" />

            <!-- Navigation Bar -->
            <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0">
                <Button Content="Werkzeug" Width="120" Height="40" Foreground="White" Background="Transparent" Click="NavigateWerkzeug" Margin="10,0"/>
                <Button Content="Projekt" Width="120" Height="40" Foreground="White" Background="Transparent" Click="NavigateProjekt" Margin="10,0"/>
            </StackPanel>
        </Grid>

        <!-- Main Layout -->
        <Grid Margin="50,120,50,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Form Section -->
            <Border Background="White" CornerRadius="10" Padding="30" Grid.Column="0" Margin="-25,0,352,10" Grid.ColumnSpan="2">
                <StackPanel>
                    <TextBlock Text="Geräte Kennzahl" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />
                    <TextBox Height="40" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1" Text="{Binding Werkzeug.WerkzeugId, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Text="Marke" FontSize="16" FontWeight="Bold" Margin="20,20,0,10" />
                    <TextBox Height="40" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1" Text="{Binding Werkzeug.Marke, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Text="Art" FontSize="16" FontWeight="Bold" Margin="20,20,0,10" />
                    <TextBox Height="40" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1" Text="{Binding Werkzeug.Art, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Text="Projekt Adresse" FontSize="16" FontWeight="Bold" Margin="20,20,0,10" />
                    <TextBox Height="40" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1" Text="{Binding Werkzeug.ProjektAdresse, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Text="Beschreibung" FontSize="16" FontWeight="Bold" Margin="20,20,0,10" />
                    <TextBox Height="64" TextWrapping="Wrap" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1" Text="{Binding Werkzeug.Beschreibung, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,20" />
                    <Button Content="Update" Command="{Binding UpdateCommand}" Width="150" Height="31" FontSize="16" Margin="20,-40,0,0" HorizontalAlignment="Right"/>


                    <Button Content="Submit"
        Width="281" Height="42"
        Background="#004D80" Foreground="White"
        FontSize="16"
        BorderThickness="0"
        Command="{Binding SubmitCommand}"
        Cursor="Hand"
        RenderTransformOrigin="2.12,0.481" />



                    <Button Content="Reset" Command="{Binding AddNewCommand}" Width="150" Height="31" FontSize="16" Margin="20,-40,0,0" HorizontalAlignment="Left"/>



                </StackPanel>
            </Border>

            <!-- Preview/Instructions Section -->
            <Border Background="#E8F0F8" CornerRadius="10" Padding="30" Grid.Column="1" Margin="50,48,0,57">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Existing Werkzeuge" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" />
                        <ListView ItemsSource="{Binding Tools}" SelectedItem="{Binding SelectedTool}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderThickness="1" BorderBrush="#CCCCCC" Padding="10" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="{Binding ToolTypeCounts[0]}" FontSize="14" FontWeight="Bold" Foreground="Black"/>

                                            <TextBlock FontSize="12" Foreground="Gray" Margin="0,5,0,0" Text="{Binding Name}" />

                                            <Button Content="Delete"
        Command="{Binding DataContext.DeleteToolCommand,
                          RelativeSource={RelativeSource AncestorType=Window}}"
        CommandParameter="{Binding}"
      Width="200" Height="30" Background=
"#004D80" Foreground="White" FontSize="16"/>




                                        </StackPanel>

                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
