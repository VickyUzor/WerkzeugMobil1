<Window x:Class="WerkzeugMobil.AddWerkzeug"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodel="clr-namespace:WerkzeugMobil.MVVM.Viewmodel"
        Title="Add New Werkzeug"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="750" Width="1200"
        Background="#E6EEF7">

    <Window.DataContext>
        <viewmodel:AddWerkzeugViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#A7BEE9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Foreground" Value="#1D2E5B"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#BBB" BlurRadius="4" ShadowDepth="0" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Background" Value="#C4D7F2"/>
            <Setter Property="Foreground" Value="#1D2E5B"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#888" BlurRadius="5" ShadowDepth="0" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A7BEE9"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#555" BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="#1D2E5B"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                    <Setter Property="Effect" Value="{x:Null}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#A7BEE9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Foreground" Value="#1D2E5B"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#BBB" BlurRadius="4" ShadowDepth="0" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="#E6EEF7" Grid.Column="0" Padding="20">
            <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Image Source="pack://application:,,,/LogoRech.png"
                       Width="150" Height="50"
                       Margin="0,0,0,40"
                       HorizontalAlignment="Center"/>

                <Button Content="Dashboard" Style="{StaticResource ModernButtonStyle}" Click="NavigateDashboard" Margin="0,0,0,10"/>
                <Button Content="Project" Style="{StaticResource ModernButtonStyle}" Click="NavigateAddProjekt" Margin="0,0,0,10"/>
                <Button Content="Werkzeug" Style="{StaticResource ModernButtonStyle}" IsEnabled="False" Margin="0,0,0,10"/>
                <Button Content="Lager" Style="{StaticResource ModernButtonStyle}" Click="NavigateLager" Margin="0,0,0,10"/>

                <StackPanel VerticalAlignment="Stretch">
                    <StackPanel VerticalAlignment="Bottom" Margin="0,40,0,0">
                        <Button Content="← Zurück" Style="{StaticResource ModernButtonStyle}" Click="BackButton_Click" Margin="0,0,0,10"/>
                        <Button Content="Logout" Style="{StaticResource ModernButtonStyle}" Click="Logout_Click"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Werkzeug Form -->
            <StackPanel Grid.Column="0" Margin="0,73,0,0">
                <TextBlock Text="Werkzeug hinzufügen" FontSize="24" FontWeight="Bold" Foreground="#1D2E5B" Margin="0,0,0,20"/>

                <StackPanel Orientation="Vertical" Margin="0,0,100,0">
                    <TextBlock Text="Nummer" FontWeight="Bold" Foreground="#1D2E5B" Margin="0,10,0,0"/>
                    <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding Werkzeug.WerkzeugId}"/>

                    <TextBlock Text="Art" FontWeight="Bold" Foreground="#1D2E5B" Margin="0,10,0,0"/>
                    <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding Werkzeug.Art}"/>

                    <TextBlock Text="Marke" FontWeight="Bold" Foreground="#1D2E5B" Margin="0,10,0,0"/>
                    <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding Werkzeug.Marke}"/>

                    <TextBlock Text="Adresse (Projekt)" FontWeight="Bold" Foreground="#1D2E5B" Margin="0,10,0,0"/>
                    <ComboBox 
    Style="{StaticResource ModernComboBoxStyle}" 
    ItemsSource="{Binding ProjectAddresses}" 
    SelectedItem="{Binding SelectedProjektAdresse}" 
    DisplayMemberPath="ProjektAddresse"
    Margin="0,0,10,0"/>
                   




                    <TextBlock Text="Beschreibung" FontWeight="Bold" Foreground="#1D2E5B" Margin="0,10,0,0"/>
                    <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding Werkzeug.Beschreibung}" AcceptsReturn="True" Height="60"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Reset" Style="{StaticResource ModernButtonStyle}" Width="120"
            Command="{Binding AddNewCommand}"/>
                    <Button Content="Speichern" Style="{StaticResource ModernButtonStyle}" Width="120"
            Command="{Binding SubmitCommand}" Margin="10,0,0,0"/>
                    <Button Content="Löschen" Style="{StaticResource ModernButtonStyle}" Width="120"
            Command="{Binding DeleteToolCommand}" Margin="10,0,0,0"/>
                </StackPanel>

            </StackPanel>

            <!-- Werkzeug List -->
            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                <TextBlock Text="Werkzeuge" FontSize="20" FontWeight="Bold" Foreground="#1D2E5B" Margin="0,0,0,10"/>

                <ListBox ItemsSource="{Binding Tools}"
             SelectedItem="{Binding SelectedTool}"
             Background="White"
             BorderBrush="#A7BEE9"
             BorderThickness="1"
             Foreground="#1D2E5B"
             Width="300"
             Height="500">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding ToolTypeCounts[0]}" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Foreground="Black"/>

                                <TextBlock Text="{Binding Name}" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="0,5,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>
            </StackPanel>
        </Grid>
    </Grid>
</Window>